Associe um motorista para o velório da NCF <%= @chamado.nota %> <br>
Data do velorio: <%= @chamado.data_velorio %><br>
Data do sepultamento: <%= @chamado.data_sepultamento %><br>
<br><br><br>

<table border='1'>
	<tr>
		<th>Foto</th>
		<th>Nome</th>
		<th>Nº do Comunicador</th>
		<th>Turno</th>
		<th>Alocar Motorista?</th>
	</tr>
	<% @motoristas.each do |m| %>
	<tr>
		<td><%= m.foto? ? image_tag(m.foto.url) : image_tag("default-user.png", size:"100x150") %></td>
		<td><%= m.nome %></td>
		<td><%= m.n_comunicador %></td>
		<td><%= m.inicio_turno %>h até <%= m.fim_turno %>h</td>
		<td><%= link_to "Alocar", associa_motorista_path(:id_motorista => m.id, :id_chamado => params[:id_chamado]) %></td>
	</tr>
	<% end %>
</table>

<%= link_to "Logout", logout_path, method: 'delete' %>
