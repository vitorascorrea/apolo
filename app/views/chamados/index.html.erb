<table border='1'>
	<tr>
		<th>Nº da NCF</th>
		<th>Status Atual</th>
		<th>Horário para a próxima mudança de Status</th>
		<th>Selecionar Status</th>
		<th>Alterar Status</th>
	</tr>
	<% @chamados.each do |c| %>
	<tr>
		<td><%= c.ncf.id %></td>
		<td><%= c.status %></td>
		<td><%= c.tempo_prox_status.strftime('%d-%m-%Y %H:%M') %></td>
		
		<%= form_for c do |f| %>
			<td><%= f.select :status, ['Alocar Motorista', 'Entregar corpo no velório'] %></td>
			<td><%= f.submit %></td>
		<% end %>
		
	</tr>
	<% end %>	
</table>

<%= link_to "Logout", logout_path, method: 'delete' %>